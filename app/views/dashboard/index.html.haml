					%i{:class => "fa fa-linkedin fa-lg"}
		.row.text-center
			.col-md-12.company
				InstaJobs &copy; 2015
		.row.text-center
			.col-md-12.links
				%span
					%a{"href" => "http://www.iubenda.com/privacy-policy/806234", :target => "_blank"}
						Privacy Policy
					|
				%span
					%a{"href" => "mailto:support@instajobs.io", :target => "_blank"}
